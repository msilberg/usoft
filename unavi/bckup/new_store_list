<?
	private function stores_list()
	{
		if (!isset(data::$cat) || !is_array(db::cat_stores())) return false;
		print "<div class=\"stores-list\"><table cellspacing=\"15\" cellpadding=\"0\" width=\"100%\" border=\"1\"><tr>";
		foreach (service::blng_wall_sort() as $val)
		{
			print "<td align=\"center\" valign=\"top\"><a href=\"./body.php?sch=".$val[0]."&catch=".data::$cat.
			service::addl("lev")."\"><div>".str_replace("!break!"," ",$val[1])."</div></a></td>";
			if (!fmod(++$i,data::$num_of_slc))
			{
				print ((++$rows==1)?"<td rowspan=\"".(
				(fmod(count(service::blng_wall_sort()),data::$num_of_slc)==0)?
				count(service::blng_wall_sort())/data::$num_of_slc :
				(count(service::blng_wall_sort())-fmod(count(service::blng_wall_sort()),data::$num_of_slc))/data::$num_of_slc+1
				)."\"><div class=\"list-btn\"></div></td>":NULL)."</tr><tr>";
			}
		}
		print "</tr></table></div>
		<div class=\"list-btn si-cls info-cls hot-cls\"></div>";		
	}
?>
